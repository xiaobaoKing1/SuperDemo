<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="theme.customer_progress_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:alertDialogStyle">@style/customer_progress_dialog</item>
        <item name="android:progressBarStyleSmall">@style/customer_progress_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/custom_dialog_view</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="customer_progress_dialog" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:fullDark">@android:color/transparent</item>
    </style>
</resources>